.modal.fade#new-user-modal{ role: 'dialog', aria: { labelledby: 'new-user-label', hidden: 'true' } }
  .modal-dialog{ role: 'document' }
    .modal-content
      = form_with model: @user, id: 'new-user-form' do |f|
        .modal-header
          %h4{ id: 'new-user-label' } New User
          %button.close{ data: { dismiss: 'modal' }, aria: { label: 'Close' } }
            %span{ aria: { hidden: 'true' } } &times;
        .modal-body
          = render 'users/form', f: f
        .modal-footer
          = f.submit class: 'btn btn-primary float-right'
