- breadcrumb :courses
.card
  .card-header
    - if policy(Course).new?
      = link_to new_course_path, class: 'btn btn-primary float-right' do
        = icon 'university'
        New Course
    %h3 Courses
  .card-body
    %table.table-striped.table
      %thead
        %tr
          %th.w-50 Name
          %th.w-25 Instructor
          %th Start Time
          %th.text-center Actions
      %tbody
        - @courses.each do |c|
          %tr
            %td= link_to c.name, course_path(c), class: 'btn btn-link'
            %td
              - if c.instructor
                = user_avatar_tag c.instructor, size: '50x50', class: 'rounded-circle'
                = c.instructor.full_name
            %td= c.start_time
            %td.d-flex
              - if policy(Enrolment).new?
                = link_to new_course_enrolment_path(c), class: 'btn btn-sm btn-outline-success mr-2',
                          data: { toggle: 'tooltip', placement: 'top', container: 'body' }, title: 'Enroll' do
                  = icon 'user-plus'
                  %span.sr-only Enroll
              - if policy(c).edit?
                = link_to edit_course_path(c), class: 'btn btn-sm btn-outline-primary mr-2',
                          data: { toggle: 'tooltip', placement: 'top' }, title: 'Edit' do
                  = icon 'edit'
                  %span.sr-only Edit
              - if policy(c).delete?
                = link_to course_path(c), class: 'btn btn-sm btn-outline-danger', method: :delete,
                          data: { confirm: "Delete course #{c.name}?", toggle: 'tooltip', placement: 'top' },
                          title: 'Delete' do
                  = icon 'trash'
                  %span.sr-only Delete
