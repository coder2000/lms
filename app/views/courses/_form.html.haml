.row
  .col
    .form-group
      = f.text_field :name, placeholder: 'Name', class: 'form-control'
  .col
    .form-group
      = f.select :instructor_id, (i.map { |u| [u.full_name, u.id] }), {},
                 class: 'custom-select'
.row
  .col
    .form-group
      %label
        Start Time
        = f.time_select :start_time, {}, class: 'custom-select'
  .col
    .form-group
      %label
        End Time
        = f.time_select :end_time, {}, class: 'custom-select'
